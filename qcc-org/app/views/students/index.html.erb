
<%# index.html.erb - Student Network listing page %>

<div class="w3-container">
  <div class="w3-bar w3-light-grey">
    <h1 class="w3-bar-item">Queensborough Community College <small class="w3-text-grey">Student Network</small></h1>
  </div>

  <div class="w3-bar w3-light-grey w3-padding">
    <%= link_to "New", new_student_path, class: "w3-button w3-small w3-round w3-grey" %>
    <%= link_to "Edit", "#", class: "w3-button w3-small w3-round" %>
    <%= link_to "Delete", "#", class: "w3-button w3-small w3-round" %>
    <div class="w3-dropdown-hover">
      <button class="w3-button w3-small w3-round">Hide/Show <i class="w3-margin-left fa fa-caret-down"></i></button>
      <div class="w3-dropdown-content w3-bar-block w3-card-4">
        <a href="#" class="w3-bar-item w3-button">Show All Columns</a>
        <a href="#" class="w3-bar-item w3-button">Hide Non-essential</a>
      </div>
    </div>
    <%= link_to "Contact Info", "#", class: "w3-button w3-small w3-round" %>
    <%= link_to "Issue Interests", "#", class: "w3-button w3-small w3-round" %>
    
    <div class="w3-dropdown-hover">
      <button class="w3-button w3-small w3-round">Export <i class="w3-margin-left fa fa-caret-down"></i></button>
      <div class="w3-dropdown-content w3-bar-block w3-card-4">
        <a href="#" class="w3-bar-item w3-button">CSV</a>
        <a href="#" class="w3-bar-item w3-button">Excel</a>
      </div>
    </div>
    
    <div class="w3-right">
      <div class="w3-bar-item">
        <input class="w3-input w3-border w3-round" type="text" placeholder="Search..." style="width:200px;">
      </div>
    </div>
  </div>

  <div class="w3-responsive">
    <table class="w3-table-all w3-hoverable">
      <thead>
        <tr class="w3-light-grey">
          <th class="w3-center" style="width: 30px;"><input type="checkbox" id="select-all"></th>
          <th><%= link_to "First name", "#", class: "w3-text-indigo" %> <%= link_to "▲", "#" %></th>
          <th><%= link_to "Last name", "#", class: "w3-text-indigo" %> <%= link_to "▲", "#" %></th>
          <th><%= link_to "Phone", "#", class: "w3-text-indigo" %></th>
          <th><%= link_to "Texts", "#", class: "w3-text-indigo" %></th>
          <th><%= link_to "Calls", "#", class: "w3-text-indigo" %></th>
          <th><%= link_to "Internship", "#", class: "w3-text-indigo" %></th>
          <th><%= link_to "Higher Ed", "#", class: "w3-text-indigo" %></th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr class="<%= cycle('', 'w3-pale-blue') %>">
            <td class="w3-center"><input type="checkbox" class="student-select" data-id="<%= student.id %>"></td>
            <td>
              <%= link_to student.first_name, student, class: "w3-text-blue w3-hover-text-indigo" %>
            </td>
            <td><%= student.last_name %></td>
            <td><%= student.phone %></td>
            <td class="w3-center">
              <% if student.texts %>
                <i class="w3-text-blue">✓</i>
              <% end %>
            </td>
            <td class="w3-center">
              <% if student.calls %>
                <i class="w3-text-blue">✓</i>
              <% end %>
            </td>
            <td class="w3-center">
              <% if student.internship %>
                <i class="w3-text-blue">✓</i>
              <% end %>
            </td>
            <td class="w3-center">
              <% if student.higher_ed %>
                <i class="w3-text-blue">✓</i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="w3-bar w3-padding w3-center">
    <div class="w3-bar">
      <a href="#" class="w3-button w3-border">&laquo;</a>
      <a href="#" class="w3-button w3-border w3-blue">1</a>
      <a href="#" class="w3-button w3-border">2</a>
      <a href="#" class="w3-button w3-border">3</a>
      <a href="#" class="w3-button w3-border">4</a>
      <a href="#" class="w3-button w3-border">5</a>
      <a href="#" class="w3-button w3-border">&raquo;</a>
    </div>
  </div>
  
  <div class="w3-panel w3-left-align">
    <div>Showing 1 to 10 of 1,696 entries. <span>1 row selected</span></div>
  </div>

  <div class="w3-container w3-padding-16">
    <div class="w3-panel w3-padding-16 w3-light-grey w3-center">
      <%= link_to "Find/Add:", "#", class: "w3-margin-right" %>
      <input type="text" class="w3-input w3-border w3-round" style="width: 150px; display: inline-block;" placeholder="First name">
      <input type="text" class="w3-input w3-border w3-round" style="width: 150px; display: inline-block;" placeholder="Last name">
      <input type="text" class="w3-input w3-border w3-round" style="width: 150px; display: inline-block;" placeholder="Phone">
      <input type="text" class="w3-input w3-border w3-round" style="width: 150px; display: inline-block;" placeholder="Texts">
      <input type="text" class="w3-input w3-border w3-round" style="width: 150px; display: inline-block;" placeholder="Calls">
      <input type="text" class="w3-input w3-border w3-round" style="width: 150px; display: inline-block;" placeholder="Internship">
      <input type="text" class="w3-input w3-border w3-round" style="width: 150px; display: inline-block;" placeholder="Higher Ed">
    </div>
  </div>
</div>

<% content_for :styles do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    .w3-table-all tr:nth-child(even) {
      background-color: #f9f9f9;
    }
    .w3-table-all tr:hover {
      background-color: #e6f2ff;
    }
  </style>
<% end %>